<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@drawable/homescreen_normal_holo"
    android:fadingEdge="vertical"
    android:orientation="horizontal"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:scrollbarStyle="insideOverlay"
    android:scrollbars="vertical"
    tools:context="me.iamcxa.remindme.ActivityEditor" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@color/actionbar_text"
        android:orientation="horizontal"
        android:padding="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp" >

        <MultiAutoCompleteTextView
            android:id="@+id/editTexQuickAddBox"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="20"
            android:height="50dp"
            android:imeOptions="normal"
            android:inputType="text"
            android:maxEms="50"
            android:maxLength="256"
            android:minHeight="50dp"
            android:shadowColor="@color/actionbar"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="3"
            android:singleLine="false"
            android:textColor="#333333"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButtonEnter"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:background="@drawable/dock_divider_land"
            android:clickable="false"
            android:contentDescription="TODO"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_new_event" />

    </LinearLayout>

</LinearLayout>